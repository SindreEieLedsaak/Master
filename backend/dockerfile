# syntax=docker/dockerfile:1
FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

WORKDIR /app

# System deps (for cryptography, authlib, etc.)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libffi-dev \
    libssl-dev \
  && rm -rf /var/lib/apt/lists/*

COPY . /app/

# Install Python deps (aligned with pyproject.toml)
RUN pip install --no-cache-dir \
    fastapi==0.115.12 \
    uvicorn[standard]==0.34.3 \
    python-dotenv==1.1.0 \
    pymongo==4.11.3 \
    python-jose==3.5.0 \
    authlib==1.6.1 \
    itsdangerous==2.2.0 \
    python-gitlab==5.6.0 \
    openai==1.84.0 \
    numpy==2.2.4 \
    certifi

EXPOSE 8000

# Run FastAPI app (app instance is in /app/app.py)
CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "8000"]
